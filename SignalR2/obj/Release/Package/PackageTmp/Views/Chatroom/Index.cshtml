@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    var displayname = User.Identity.GetUserName();
}

<h2>Netgoons Stream</h2>

<div class="row">
    <div class="col-md-9 twitch">
        <img src="http://img02.deviantart.net/65a2/i/2015/146/b/a/aego_esports___league_of_legends_stream_layout_by_cyberdesignpt-d8utwxx.png" />
    </div>
    <div class="chat">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" />
        <input type="hidden" id="displayname" value="@displayname" />
        <ul id="discussion"></ul>
    </div>
</div>



